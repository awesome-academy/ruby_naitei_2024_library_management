<footer class="bg-card px-10 pb-5 mt-20">
  <div class="grid grid-cols-4 py-10">
    <div class=" flex  justify-center ">
      <%= image_tag "logo.png", alt: "sample app logo", class: "w-52" %>
    </div>
    <div class=" flex flex-col items-end">
      <div>
        <h3 class="uppercase font-semibold text-2xl mb-2">
          <%= t "sitemap"%>
        </h3>
        <ul class="space-y-2">
          <li>
            <%= link_to t("home"), root_path, class: "hover:underline" %>
          </li>
          <li>
            <%= link_to t("books"), books_path, class: "hover:underline" %>
          </li>
          <li>
            <%= link_to t("authors"), authors_path, class: "hover:underline" %>
          </li>
        </ul>
      </div>
    </div>
    <div class=" flex flex-col items-center">
      <div>
        <h3 class="uppercase font-semibold text-2xl mb-2">
          <%= t "categories" %>
        </h3>
        <ul class="space-y-2">
          <% @categories.each do |category| %>
            <li>
              <%= link_to category.name, books_path(category: category.id), class: "hover:underline" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div>
      <div>
        <h3 class="uppercase font-semibold text-2xl mb-2">
          <%= t "about_us" %>
        </h3>
        <ul class="space-y-2">
          <li>
            <i class="bi bi-people"></i> <%= t "name" %>: Nhom minh co 3 thanh vien
          </li>
          <li>
            <i class="bi bi-building"></i> <%= t "company" %>: SUN* Inc
          </li>
          <li>
            <i class="bi bi-bullseye"></i> <%= t "goal" %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <%= render_separator class: "bg-primary" %>
  <div class="flex flex-wrap w-full justify-between  bg-card py-3 ">
    <div class=" ">
      <div>
        <%= t "design" %>
        <span class="font-bold">
          <%= link_to "Minh", "https://www.facebook.com/Minhatt048", target: "__blank", class: "font-semibold hover:underline" %> -
          <%= link_to "Nhàn", "https://www.facebook.com/nhan.phanthithanh.3192", target: "__blank", class: "font-semibold hover:underline" %> -
          <%= link_to "Huyền", "https://www.facebook.com/doan.crystal.5", target: "__blank", class: "font-semibold hover:underline" %>
        </span>
      </div>
    </div>
    <div class="">
      <p>
        © Copyright 2024 <span class="font-bold">Librarails</span>
